@{
    ViewData["Title"] = "Home Page";
}
<div class="container-fluid">
    <div class="row flex-nowrap">
        <!-- Sidebar -->
        <!-- Content Starts -->
        <div class="col py-3">


            <div class="container text-center">
                <div class="row">
                    <div class="col-8 mx-auto">
                        <!-- Centering the content -->
                        @foreach (_ShowPost post in ViewBag.posts)
                        {
                            <div class="container mt-5">
                                <div class="card post-card">
                                    <div class="post-header">
                                        <!-- Post header content -->
                                        <div>
                                            <p style="margin-top:20px;" class="post-username">@post.UserName</p>
                                            <p class="post-username">@post.Title</p>
                                            <p class="post-username text-muted">Posted: @post.DateTime</p>
                                        </div>
                                    </div>
                                    <div class="post-content">
                                        <!-- Check if there is an image URL -->
                                        @if (!string.IsNullOrEmpty(post.ImgUrl))
                                        {
                                            <img src="@post.ImgUrl" class="img-fluid" alt="UserImage">
                                        }
                                        <!-- Center align the content -->
                                        <div class="d-flex justify-content-center">
                                            <p style="margin-top:20px; padding:0px; width:80%;">@post.Content</p>
                                        </div>
                                    </div>
                                    <div class="post-actions">
                                        <!-- Post action buttons -->
                                        <div class="d-flex justify-content-center">
                                            <input type="text" style="margin-top:10px; padding-top:5px; width:90%; padding-bottom:5px" class="form-control" placeholder="Write a comment...">
                                        </div>
                                        <button style="margin:10px; padding:10px" class="btn btn-secondary">Comment</button>
                                        <br />
                                        <br />
                                    </div>
                                </div>
                            </div>

                        }
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>

